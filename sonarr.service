[Unit]
Description=Sonarr Service
Wants=network-online.target
After=network-online.target

[Service]
User=lee
Group=lee
Type=forking
ExecStart=/usr/bin/mono /opt/NzbDrone/NzbDrone.exe /data=/var/sonarr
Restart=always
RestartSec=15
TimeoutStopSec=20

[Install]
WantedBy=multi-user.target