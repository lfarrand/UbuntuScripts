[Unit]
Description=Nest Stats Usage Service
Wants=network-online.target
After=network-online.target

[Service]
User=lee
Group=lee
Type=forking
ExecStart=cd /git/UbuntuScripts/Metrics/powerusage && /usr/bin/python /git/UbuntuScripts/Metrics/powerusage/getneststats.py -is metricshub -idb metrics -iusr lee -ipass Hhey9huk
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
